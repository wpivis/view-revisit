{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.1.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Contradiction",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2023-04-14",
    "description": "A simple demo of using stimuli in an HTML file that renders a D3 visualization. Data is collected via a numeric response field.",
    "organizations": [
      "University of Utah",
      "WPI",
      "University of Toronto"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "contradiction/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true,
    "windowEventDebounceTime": 200
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "contradiction/assets/introduction.md",
      "response": []
    },
    "consent": {
      "type": "markdown",
      "path": "contradiction/assets/consent.md",
      "response": []
    },
    "pretask": {
      "type": "markdown",
      "path": "contradiction/assets/pretask.md",
      "response": []
    },
    "posttask": {
      "type": "markdown",
      "path": "contradiction/assets/posttask.md",
      "response": [
        {
          "id": "q-post-experience",
          "prompt": "What was your experience using Contradiction Explorer in content triage for this task?",
          "location": "belowStimulus",
          "type": "longText",
          "placeholder": "Please describe"
        },
        {
          "id": "q-post-challenges",
          "prompt": "How did Contradiction Explorer address challenges you typically face in the content triage workflow?",
          "location": "belowStimulus",
          "type": "longText",
          "placeholder": "Please describe"
        }
      ]
    },
    "survey": {
      "type": "markdown",
      "path": "contradiction/assets/survey.md",
      "response": []
    },
    "thank": {
      "type": "markdown",
      "path": "contradiction/assets/thank.md",
      "response": []
    },
    "external_website": {
      "type": "website",
      "path": "contradiction/assets/nli-explorer.html",
      "description": "Which contradiction is best?",
      "instruction": "Please review the provided summary and source documents.",
      "response": [
        {
         "id": "q-relationship-assessment",
         "prompt": "What is the relationship between Mr. Wuf, his family, and suspicious activity in Raleigh?",
         "location": "sidebar",
         "type": "longText",
         "placeholder": "Please explain"
        },
        {
         "id": "q-relationship-certainty",
         "prompt": "How certain are you about your answer to the previous question?",
         "location": "sidebar",
         "type": "dropdown",
         "placeholder": "Select certainty",
         "options": [
           "Not at all certain",
           "Somewhat uncertain",
           "Neutral",
           "Somewhat certain",
           "Very certain"
         ]
        },
        {
         "id": "q-surveillance-assessment",
         "prompt": "Is there evidence to indicate the NCSU police increase surveillance on Mr. Wuf?",
         "location": "sidebar",
         "type": "dropdown",
         "placeholder": "Select an option",
         "options": [
           "Not at all likely",
           "Somewhat unlikely",
           "Neutral",
           "Somewhat likely",
           "Highly likely"
         ]
        },
        {
         "id": "q-surveillance-certainty",
         "prompt": "How certain are you about your answer to the previous question?",
         "location": "sidebar",
         "type": "dropdown",
         "placeholder": "Select certainty",
         "options": [
           "Not at all certain",
           "Somewhat uncertain",
           "Neutral",
           "Somewhat certain",
           "Very certain"
         ]
        },
        {
         "id": "q-operating-assessment",
         "prompt": "Is the Big Bad Wolf Syndicate operating in Raleigh?",
         "location": "sidebar",
         "type": "dropdown",
         "placeholder": "Select an option",
         "options": [
           "Not at all likely",
           "Somewhat unlikely",
           "Neutral",
           "Somewhat likely",
           "Highly likely"
         ]
        },
        {
         "id": "q-operating-certainty",
         "prompt": "How certain are you about your answer to the previous question?",
         "location": "sidebar",
         "type": "dropdown",
         "placeholder": "Select certainty",
         "options": [
           "Not at all certain",
           "Somewhat uncertain",
           "Neutral",
           "Somewhat certain",
           "Very certain"
         ]
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "consent",
      "introduction",
      "pretask",
      "external_website",
      "posttask",
      "survey"
    ]
  }
}
